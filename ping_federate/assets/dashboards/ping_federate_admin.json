    {
      "id": 4026262965481334,
      "definition": {
        "title": "Event Details",
        "title_size": "16",
        "title_align": "left",
        "requests": [
          {
            "response_format": "event_list",
            "query": {
              "data_source": "logs_stream",
              "query_string": "source:ping-federate service:admin $event_name $component ",
              "indexes": [],
              "storage": "hot",
              "sort": { "order": "asc", "column": "@usr.name" }
            },
            "columns": [
              { "field": "status_line", "width": "auto" },
              { "field": "timestamp", "width": "auto" },
              { "field": "host", "width": "auto" },
              { "field": "@usr.name", "width": "auto" },
              { "field": "@network.client.ip", "width": "auto" },
              { "field": "@component", "width": "auto" },
              { "field": "@evt.name", "width": "auto" },
              { "field": "@description", "width": "auto" }
            ]
          }
        ],
        "type": "list_stream"
      },
      "layout": { "x": 0, "y": 23, "width": 12, "height": 5 }
    }
  ],
  "template_variables": [
    {
      "name": "event_name",
      "prefix": "@evt.name",
      "available_values": [
        "LOGIN_ATTEMPT",
        "ACTIVATE",
        "DEACTIVATE",
        "CREATE",
        "MODIFY",
        "UPDATE",
        "EXPORT",
        "ROLE_CHANGE"
      ],
      "default": "*"
    },
    {
      "name": "component",
      "prefix": "@component",
      "available_values": [
        "USER",
        "GENERAL_SETTINGS",
        "IDP_ADAPTER",
        "IDP_CONNECTION",
        "CERTIFICATE",
        "CONFIG_ARCHIVE",
        "OAUTH_VIRTUAL_ISSUERS",
        "METADATA",
        "aDMIN_XML_SIGNATURES"
      ],
      "default": "*"
    }
  ],
  "layout_type": "ordered",
  "notify_list": [],
  "reflow_type": "fixed"
