    {
      "id": 5654245605908244,
      "definition": {
        "title": "Total Logs",
        "title_size": "16",
        "title_align": "left",
        "type": "query_value",
        "requests": [
          {
            "response_format": "scalar",
            "queries": [
              {
                "data_source": "logs",
                "name": "query1",
                "indexes": ["*"],
                "compute": { "aggregation": "count" },
                "group_by": [],
                "search": {
                  "query": "source:ping-federate service:admin $event_name $component"
                },
                "storage": "hot"
              }
            ],
            "formulas": [{ "formula": "query1" }],
            "conditional_formats": [
              {
                "comparator": ">",
                "value": 0,
                "palette": "black_on_light_green",
                "custom_bg_color": "#bad3fd"
              }
            ]
          }
        ],
        "autoscale": true,
        "precision": 2,
        "timeseries_background": {
          "yaxis": { "include_zero": true },
          "type": "area"
        }
      },
      "layout": { "x": 0, "y": 2, "width": 3, "height": 2 }
    },
    {
      "id": 1509312559927310,
      "definition": {
        "title": "Traffic Over Time",
        "title_size": "16",
        "title_align": "left",
        "show_legend": true,
        "legend_layout": "auto",
        "legend_columns": ["avg", "min", "max", "value", "sum"],
        "type": "timeseries",
        "requests": [
          {
            "formulas": [{ "formula": "query1" }],
            "queries": [
              {
                "data_source": "logs",
                "name": "query1",
                "indexes": ["*"],
                "compute": { "aggregation": "count" },
                "group_by": [],
                "search": {
                  "query": "source:ping-federate service:admin $event_name $component"
                },
                "storage": "hot"
              }
            ],
            "response_format": "timeseries",
            "style": {
              "palette": "dog_classic",
              "order_by": "values",
              "line_type": "solid",
