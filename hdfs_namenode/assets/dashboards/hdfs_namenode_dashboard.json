            "layout": {
                "x": 2,
                "y": 19,
                "width": 16,
                "height": 14
            }
        },
        {
            "id": 3,
            "definition": {
                "type": "query_value",
                "requests": [
                    {
                        "q": "avg:hdfs.namenode.num_dead_data_nodes{*}",
                        "aggregator": "avg",
                        "conditional_formats": [
                            {
                                "comparator": ">",
