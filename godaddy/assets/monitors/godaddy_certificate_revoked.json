			"thresholds": {
				"critical": 1
			},
			"notify_audit": false,
			"include_tags": true,
			"notify_no_data": false,
			"new_host_delay": 300,
			"silenced": {}
		},
		"priority": null,
		"restriction_policy": {
			"bindings": []
		}
	},
