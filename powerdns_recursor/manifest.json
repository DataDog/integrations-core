    "integration": {
      "source_type_name": "PowerDNS Recursor",
      "configuration": {
        "spec": "assets/configuration/spec.yaml"
      },
      "events": {
        "creates_events": false
      },
      "metrics": {
        "prefix": "powerdns.",
        "check": "powerdns.recursor.questions",
