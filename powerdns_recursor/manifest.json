      "auto_install": true
    },
    "dashboards": {
      "powerdns": "assets/dashboards/powerdns_dashboard.json"
    },
    "saved_views": {
      "powerdns_processes": "assets/saved_views/powerdns_processes.json"
    },
    "logs": {
      "source": "powerdns"
    }
  }
