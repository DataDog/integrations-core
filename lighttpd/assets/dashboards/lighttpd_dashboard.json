{
    "title": "Lighttpd - Overview",
    "description": "This dashboard tracks server usage and throughput for your Lighttpd infrastructure, so you can identify resource limitations and ensure your web tier has enough capacity to handle request traffic. Further reading on Lighttpd monitoring:\n\n- [How to monitor Lighttpd with Datadog](https://www.datadoghq.com/blog/monitor-lighttpd-web-server-metrics/)\n\n- [Datadogâ€™s integration docs for  Lighttpd](https://docs.datadoghq.com/integrations/lighttpd/)\n\nClone this template dashboard to make changes and add your own graph widgets.",
    "widgets": [
        {
            "id": 0,
            "definition": {
                "type": "query_value",
                "requests": [
                    {
                        "q": "sum:lighttpd.performance.uptime{$webserver}",
                        "aggregator": "avg",
                        "conditional_formats": [
                            {
                                "comparator": ">",
                                "value": 50,
                                "palette": "white_on_green"
                            }
                        ]
                    }
                ],
                "custom_links": [],
                "title": "Uptime",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "1h"
                },
                "precision": 2
            },
            "layout": {
                "x": 35,
                "y": 2,
                "width": 13,
                "height": 13
            }
        },
        {
            "id": 1,
            "definition": {
                "type": "timeseries",
                "requests": [
                    {
                        "q": "per_second(sum:lighttpd.net.hits{$webserver} by {host}) - avg:lighttpd.net.request_per_s{*}",
                        "display_type": "area"
                    }
                ],
                "custom_links": [],
                "title": "Hits/s minus requests/s",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "1d"
                },
                "show_legend": false,
                "legend_size": "0"
            },
            "layout": {
                "x": 91,
                "y": 2,
                "width": 47,
                "height": 22
            }
        },
        {
            "id": 2,
            "definition": {
                "type": "timeseries",
                "requests": [
                    {
                        "q": "sum:lighttpd.performance.idle_server{$webserver}",
                        "display_type": "line",
                        "style": {
                            "palette": "cool"
                        }
                    },
                    {
                        "q": "sum:lighttpd.performance.busy_servers{$webserver}",
                        "display_type": "line",
                        "style": {
                            "palette": "cool"
                        }
                    }
                ],
                "custom_links": [],
                "title": "Idle/busy workers",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "4h"
                },
                "show_legend": false,
                "legend_size": "0"
            },
            "layout": {
                "x": 140,
                "y": 2,
                "width": 47,
                "height": 22
            }
        },
        {
            "id": 3,
            "definition": {
                "type": "timeseries",
                "requests": [
                    {
                        "q": "sum:lighttpd.net.bytes_per_s{$webserver}",
                        "display_type": "area"
                    }
                ],
                "custom_links": [],
                "title": "Bytes read, written/s",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "1h"
                },
                "show_legend": false,
                "legend_size": "0"
            },
            "layout": {
                "x": 140,
                "y": 26,
                "width": 47,
                "height": 24
            }
        },
        {
            "id": 4,
            "definition": {
                "type": "timeseries",
                "requests": [
                    {
                        "q": "sum:lighttpd.net.request_per_s{*} by {host}",
                        "display_type": "area",
                        "style": {
                            "palette": "cool"
                        }
                    }
                ],
                "custom_links": [],
                "title": "Requests/s",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "4h"
                },
                "show_legend": false,
                "legend_size": "0"
            },
            "layout": {
                "x": 91,
                "y": 26,
                "width": 47,
                "height": 24
            }
        },
        {
            "id": 5,
            "definition": {
                "type": "note",
                "content": "Throughput",
                "background_color": "gray",
                "font_size": "18",
                "text_align": "center",
                "show_tick": true,
                "tick_pos": "50%",
                "tick_edge": "right"
            },
            "layout": {
                "x": 73,
                "y": 2,
                "width": 16,
                "height": 48
            }
        },
        {
            "id": 6,
            "definition": {
                "type": "image",
                "url": "/static/images/logos/lighttpd_large.svg",
                "sizing": "zoom"
            },
            "layout": {
                "x": 1,
                "y": 2,
                "width": 18,
                "height": 13
            }
        },
        {
            "id": 7,
            "definition": {
                "type": "query_value",
                "requests": [
                    {
                        "q": "sum:lighttpd.performance.idle_server{$webserver}",
                        "aggregator": "avg",
                        "conditional_formats": [
                            {
                                "comparator": ">=",
                                "value": 120,
                                "palette": "white_on_yellow"
                            }
                        ]
                    }
                ],
                "custom_links": [],
                "title": "Idle workers",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "5m"
                },
                "custom_unit": "",
                "precision": 0
            },
            "layout": {
                "x": 34,
                "y": 18,
                "width": 19,
                "height": 14
            }
        },
        {
            "id": 8,
            "definition": {
                "type": "check_status",
                "title": "Agent Up",
                "title_size": "13",
                "title_align": "center",
                "check": "lighttpd.can_connect",
                "grouping": "cluster",
                "group_by": [],
                "tags": [],
                "time": {
                    "live_span": "10m"
                }
            },
            "layout": {
                "x": 21,
                "y": 2,
                "width": 12,
                "height": 13
            }
        },
        {
            "id": 9,
            "definition": {
                "type": "query_value",
                "requests": [
                    {
                        "q": "sum:lighttpd.performance.busy_servers{$webserver}",
                        "aggregator": "avg",
                        "conditional_formats": [
                            {
                                "comparator": "<",
                                "value": 3,
                                "palette": "white_on_green"
                            }
                        ]
                    }
                ],
                "custom_links": [],
                "title": "Busy workers",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "5m"
                },
                "precision": 0
            },
            "layout": {
                "x": 14,
                "y": 18,
                "width": 19,
                "height": 14
            }
        },
        {
            "id": 10,
            "definition": {
                "type": "toplist",
                "requests": [
                    {
                        "q": "top(sum:lighttpd.net.hits{*} by {host}, 10, 'mean', 'desc')",
                        "conditional_formats": [
                            {
                                "comparator": "<",
                                "value": 1,
                                "palette": "white_on_red"
                            }
                        ],
                        "style": {
                            "palette": "dog_classic"
                        }
                    }
                ],
                "custom_links": [],
                "title": "Number of hits per host",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "4h"
                }
            },
            "layout": {
                "x": 43,
                "y": 34,
                "width": 28,
                "height": 16
            }
        },
        {
            "id": 11,
            "definition": {
                "type": "note",
                "content": "\n\n\nServer \nusage",
                "background_color": "gray",
                "font_size": "18",
                "text_align": "center",
                "show_tick": true,
                "tick_pos": "50%",
                "tick_edge": "right"
            },
            "layout": {
                "x": 0,
                "y": 18,
                "width": 12,
                "height": 32
            }
        },
        {
            "id": 12,
            "definition": {
                "type": "toplist",
                "requests": [
                    {
                        "q": "top(sum:lighttpd.net.request_per_s{*} by {host}, 10, 'mean', 'desc')",
                        "style": {
                            "palette": "dog_classic"
                        }
                    }
                ],
                "custom_links": [],
                "title": "Avg requests per host",
                "title_size": "16",
                "title_align": "left",
                "time": {
                    "live_span": "4h"
                }
            },
            "layout": {
                "x": 14,
                "y": 34,
                "width": 28,
                "height": 16
            }
        }
    ],
    "template_variables": [
        {
            "name": "webserver",
            "default": "*",
            "prefix": "host"
        }
    ],
    "layout_type": "free",
    "is_read_only": true,
    "notify_list": []
}
