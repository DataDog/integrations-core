{
	"version": 2,
	"created_at": "2024-07-25",
	"last_updated_at": "2024-07-25",
	"title": "Contentful: Content Type is unpublished",
	"description": "Unpublished Content Types are monitored.",
	"definition": {
		"id": 149527190,
		"name": "Contentful: Content Type is unpublished",
		"type": "log alert",
		"query": "logs(\"source:contentful @evt.name:ContentManagement.ContentType.unpublish\").index(\"*\").rollup(\"count\").by(\"@details.sys.id,@details.sys.space.sys.id,@details.sys.environment.sys.id\").last(\"12h\") >= 1",
		"message": "{{#is_alert}}\nContent Type with ID: {{[@details.sys.id].name}} is unpublished, this might break your app(s).  \nSpace: {{[@details.sys.space.sys.id].name}}  \nEnvironment: {{[@details.sys.environment.sys.id].name}}\n{{/is_alert}}",
		"tags": [],
		"options": {
			"thresholds": {
				"critical": 1
			},
			"enable_logs_sample": false,
			"notify_audit": false,
			"on_missing_data": "default",
			"include_tags": true,
			"new_group_delay": 60,
			"groupby_simple_monitor": false,
			"silenced": {}
		},
		"priority": null,
		"restriction_policy": {
			"bindings": []
		}
	},
	"tags": [
		"integration:contentful"
	]
}