      "available_values": []
    },
    {
      "name": "helm_status",
      "default": "*",
      "prefix": "helm_status",
      "available_values": []
    },
    {
      "name": "helm_namespace",
      "default": "*",
      "prefix": "helm_namespace",
      "available_values": []
    }
  ],
  "layout_type": "ordered",
  "is_read_only": false,
