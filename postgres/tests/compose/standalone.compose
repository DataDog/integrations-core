version: '2.1'
services:
  postgres:
    image: "postgres:${POSTGRES_VERSION}-alpine"
    ports:
      - 5432:5432
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U datadog -d datadog_test && if [[ ! -e /tmp/container_ready.txt ]]; then exit 1; fi"]
      interval: 1s
      timeout: 5s
      retries: 5
    volumes:
      - ./resources:/docker-entrypoint-initdb.d/
