{
    "name": "Trend Micro Vision One Endpoint Security alert: Similar policy and event type detected on multiple hosts with high risk",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "source:trend-micro-vision-one-endpoint-security"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "",
            "query": "source:trend-micro-vision-one-endpoint-security service:behavior-monitoring @risk_level:High ",
            "groupByFields": [
                "@event_type",
                "@policy_type"
            ],
            "distinctFields": [
                "@source_host_name"
            ],
            "aggregation": "cardinality"
        }
    ],
    "cases": [
        {
            "condition": "a > 1",
            "name": "",
            "status": "High",
            "notifications": []
        }
    ]
}