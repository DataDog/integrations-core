{
    "version": 2,
    "created_at": "2024-06-26",
    "last_updated_at": "2024-06-26",
    "title": "vLLM application token usage is high",
    "description": "This monitor will alert you if vLLM is generating a lot of tokens.",
    "tags": [
        "integration:vllm"
    ],
    "definition": {
        "id": 437564,
        "name": "vLLM application token usage is high",
        "type": "query alert",
        "query": "sum(last_1d):avg:vllm.avg.generation_throughput.toks_per_s{*} >= 10000",
        "message": "The number of tokens used by your vLLM application is above the threshold.",
        "tags": [
            "integration:vllm"
        ],
        "options": {
            "thresholds": {
                "critical": 10000
            },
            "notify_audit": false,
            "include_tags": false,
            "avalanche_window": 20,
            "on_missing_data": "default",
            "new_host_delay": 300,
            "silenced": {}
        },
        "priority": null,
        "restriction_policy": {
            "bindings": []
        }
    }
}
