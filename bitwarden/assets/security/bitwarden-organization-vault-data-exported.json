    "queries": [
        {
            "name": "organization_vault_data_exported",
            "query": "source:bitwarden service:event-logs @event.type:1602",
            "groupByFields": [
                "@usr.name"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "organization_vault_data_exported > 0",
            "name": "Organization vault data exported",
            "status": "High",
            "notifications": []
        }
    ]
