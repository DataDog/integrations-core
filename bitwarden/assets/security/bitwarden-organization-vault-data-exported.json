        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "mitre_platform:windows",
        "technique:T1555-credentials-from-password-stores",
        "tactic:TA0006-credential-access",
        "mitre_platform:saas",
        "mitre_platform:linux",
        "source:bitwarden",
