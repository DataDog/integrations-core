{
    "name": "Bitwarden user copied multiple credentials",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "mitre_platform:windows",
        "technique:T1555-credentials-from-password-stores",
        "tactic:TA0006-credential-access",
        "mitre_platform:saas",
        "mitre_platform:linux",
        "source:bitwarden",
        "security:attack",
        "mitre_platform:cloud"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "user_copied_credential",
            "query": "source:bitwarden @event.type:(1111 OR 1112 OR 1113)",
            "groupByFields": [
                "@usr.name"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "user_copied_credential > 15",
            "name": "User copied multiple credentials",
            "status": "Medium",
            "notifications": []
        }
    ]
}