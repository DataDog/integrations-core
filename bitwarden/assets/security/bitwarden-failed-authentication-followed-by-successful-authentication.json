{
    "name": "Bitwarden failed authentication followed by successful authentication",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "mitre_platform:windows",
        "tactic:TA0006-credential-access",
        "mitre_platform:saas",
        "mitre_platform:linux",
        "technique:T1110-brute-force",
        "source:bitwarden",
        "security:attack",
        "mitre_platform:cloud"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "failed_authentication",
            "query": "source:bitwarden service:event-logs @event.type:(1005 OR 1006)",
            "groupByFields": [
                "@usr.name"
            ],
            "distinctFields": [],
            "aggregation": "count"
        },
        {
            "name": "successful_authentication",
            "query": "source:bitwarden service:event-logs @event.type:1000",
            "groupByFields": [
                "@usr.name"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "failed_authentication > 5 THEN successful_authentication > 0",
            "name": "Failed authentication attempts followed by successful authentication detected",
            "status": "High",
            "notifications": []
        }
    ]
}