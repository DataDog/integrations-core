{
    "name": "Bitwarden activity from potentially malicious ip address",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "mitre_platform:windows",
        "mitre_platform:saas",
        "technique:T1078-valid-accounts",
        "mitre_platform:linux",
        "source:bitwarden",
        "security:attack",
        "mitre_platform:cloud",
        "tactic:TA0001-initial-access"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "activity_from_potentially_malicious_ip_address",
            "query": "source:bitwarden service:event-logs @threat_intel.indicators_matched:IP @threat_intel.results.intention:(suspicious OR malicious)",
            "groupByFields": [
                "@network.client.ip"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "activity_from_potentially_malicious_ip_address > 0",
            "name": "Activity from potentially malicious IP address",
            "status": "Low",
            "notifications": []
        }
    ]
}