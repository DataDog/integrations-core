{
    "name": "Bitwarden organization vault purge detected",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "mitre_platform:windows",
        "technique:T1485-data-destruction",
        "tactic:TA0040-impact",
        "mitre_platform:saas",
        "mitre_platform:linux",
        "source:bitwarden",
        "mitre_platform:cloud",
        "security:attack"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "organization_vault_purge",
            "query": "source:bitwarden service:event-logs @event.type:1601",
            "groupByFields": [
                "@usr.name"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "organization_vault_purge > 0",
            "name": "Organization vault purged",
            "status": "High",
            "notifications": []
        }
    ]
}