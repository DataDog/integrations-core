{
    "name": "Forescout malicious activity detected",
    "product": [
        "security_monitoring"
    ],
    "defaultRuleId": "",
    "tags": [
        "source:forescout",
        "security:attack"
    ],
    "isEnabled": true,
    "isBeta": true,
    "isShadowDeployed": true,
    "isMapperMetricsOnly": false,
    "options": {
        "detectionMethod": "threshold",
        "evaluationWindow": 900,
        "keepAlive": 3600,
        "maxSignalDuration": 86400
    },
    "queries": [
        {
            "name": "malicious_activity_detected",
            "query": "source:forescout service:threat-protection @evt.name:lockdown-events",
            "groupByFields": [
                "@network.client.ip"
            ],
            "distinctFields": [],
            "aggregation": "count"
        }
    ],
    "cases": [
        {
            "condition": "malicious_activity_detected > 0",
            "name": "",
            "status": "Medium",
            "notifications": []
        }
    ]
}