{
    "name": "Envoy 4xx Response Logs",
    "type": "logs",
    "query": "source:envoy @http.status_code:[400 TO 499] ",
    "page": "stream",
    "timerange": {
        "interval": 900000
    },
    "visible_facets": [
        "source",
        "host",
        "service",
        "@http.status_code",
        "@http.method",
        "@http.url",
        "@http.authority"
    ],
    "options": {
        "columns": [
            "@http.status_code",
            "@http.url",
            "@http.method",
            "@http.authority"
    ],
    "show_date_column": true,
    "show_message_column": true,
    "message_display": "inline",
    "show_timeline": true
    }
}