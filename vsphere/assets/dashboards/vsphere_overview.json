    {
      "id": 10,
      "definition": {
        "type": "note",
        "content": "# ESXi Hosts",
        "background_color": "gray",
        "font_size": "14",
        "text_align": "center",
        "show_tick": true,
        "tick_pos": "50%",
        "tick_edge": "bottom"
      },
      "layout": { "x": 49, "y": 1, "width": 47, "height": 6 }
    },
    {
      "id": 11,
      "definition": {
        "type": "query_value",
        "requests": [
          {
            "q": "sum:vsphere.host.count{$vcenter_server,$vcenter_datacenter,$host}.rollup(avg)",
            "aggregator": "last"
          }
        ],
        "custom_links": [],
        "title": "Host count",
        "title_size": "16",
        "title_align": "left",
        "autoscale": true,
        "precision": 0
      },
      "layout": { "x": 32, "y": 12, "width": 15, "height": 9 }
    },
    {
      "id": 12,
      "definition": {
        "type": "query_value",
        "requests": [
          {
            "q": "sum:vsphere.vm.count{$vcenter_server,$vcenter_datacenter,$host}.rollup(avg)",
            "aggregator": "last"
          }
        ],
        "custom_links": [],
        "title": "VM count",
        "title_size": "16",
        "title_align": "left",
        "autoscale": true,
        "precision": 0
      },
      "layout": { "x": 16, "y": 12, "width": 15, "height": 9 }
    },
    {
      "id": 13,
      "definition": {
        "type": "check_status",
        "title": "vSphere status",
        "title_size": "16",
        "title_align": "center",
        "check": "vsphere.can_connect",
        "grouping": "cluster",
        "group_by": ["vcenter_server"],
        "tags": ["*"]
      },
      "layout": { "x": 0, "y": 12, "width": 15, "height": 9 }
    },
    {
      "id": 14,
      "definition": {
        "type": "query_value",
        "requests": [
