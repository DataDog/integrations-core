          {
            "id": 10,
            "definition": {
              "title": "Redis hosts",
              "title_size": "16",
              "title_align": "left",
              "type": "hostmap",
              "requests": { "fill": { "q": "avg:redis.cpu.sys{*} by {host}" } },
              "node_type": "host",
              "no_metric_hosts": false,
              "no_group_hosts": true,
