            "layout": { "x": 0, "y": 0, "width": 6, "height": 3 }
          },
          {
            "id": 30,
            "definition": {
              "title": "Redis Logs",
              "title_size": "16",
              "type": "log_stream",
              "indexes": [],
              "query": "source:redis $scope",
              "sort": { "column": "time", "order": "desc" },
              "columns": [],
              "show_date_column": true,
              "show_message_column": true,
              "message_display": "expanded-md"
