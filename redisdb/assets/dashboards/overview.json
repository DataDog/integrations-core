            "layout": { "x": 0, "y": 2, "width": 6, "height": 2 }
          },
          {
            "id": 15,
            "definition": {
              "title": "Redis keyspace",
              "type": "query_value",
              "requests": [
                {
                  "q": "sum:redis.keys{$scope}",
