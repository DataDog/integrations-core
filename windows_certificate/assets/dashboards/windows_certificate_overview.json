        {
            "available_values": [],
            "default": "*",
            "name": "subject_common_name",
            "prefix": "subject_cn"
        },
        {
            "available_values": [],
            "default": "*",
            "name": "subject_organization",
            "prefix": "subject_o"
        },
        {
            "available_values": [],
            "default": "*",
            "name": "server",
            "prefix": "server"
        },
        {
            "available_values": [],
            "default": "*",
            "name": "crl_issuer_organizational_unit",
            "prefix": "crl_issuer_ou"
