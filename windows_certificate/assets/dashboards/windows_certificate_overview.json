            "id": 4652925140828556,
            "layout": {
                "height": 6,
                "width": 4,
                "x": 0,
                "y": 0
            }
        },
        {
            "definition": {
                "background_color": "vivid_blue",
                "layout_type": "ordered",
                "show_title": true,
                "title": "Certificate Expiration",
                "type": "group",
                "widgets": [
                    {
                        "definition": {
                            "check": "windows_certificate.cert_expiration",
                            "group_by": [
                                "certificate_thumbprint",
                                "certificate_serial_number",
                                "subject_cn",
                                "subject_o"
                            ],
                            "grouping": "cluster",
                            "tags": [
                                "$certificate_store",
                                "$subject_common_name",
                                "$server",
                                "$subject_organization"
                            ],
                            "title": "Certificate Expiration",
                            "title_align": "center",
                            "title_size": "16",
                            "type": "check_status"
                        },
                        "id": 5168903633321084,
                        "layout": {
                            "height": 2,
                            "width": 4,
                            "x": 0,
                            "y": 0
                        }
                    },
                    {
                        "definition": {
                            "background_color": "yellow",
                            "content": "Included service check:\n\n* `windows_certificate.cert_expiration` - Returns `CRITICAL` if the certificate has expired or expires in less than `days_critical`, returns `WARNING` if the certificate expires in less than `days_warning`. Otherwise returns `OK`.",
                            "font_size": "14",
                            "has_padding": true,
                            "show_tick": true,
                            "text_align": "left",
                            "tick_edge": "left",
                            "tick_pos": "50%",
                            "type": "note",
                            "vertical_align": "center"
                        },
                        "id": 6717423497232037,
                        "layout": {
                            "height": 2,
                            "width": 3,
                            "x": 4,
                            "y": 0
                        }
                    },
                    {
                        "definition": {
                            "has_search_bar": "auto",
                            "requests": [
                                {
                                    "formulas": [
                                        {
                                            "alias": "Days Until Expiration",
                                            "cell_display_mode": "number",
                                            "conditional_formats": [
                                                {
                                                    "comparator": "<",
                                                    "palette": "white_on_red",
                                                    "value": 7
                                                },
                                                {
                                                    "comparator": "<",
                                                    "palette": "white_on_yellow",
                                                    "value": 30
                                                },
                                                {
                                                    "comparator": ">",
                                                    "palette": "white_on_green",
                                                    "value": 29
                                                }
                                            ],
                                            "formula": "query1"
                                        }
                                    ],
                                    "queries": [
                                        {
                                            "aggregator": "avg",
                                            "data_source": "metrics",
                                            "name": "query1",
                                            "query": "avg:windows_certificate.days_remaining{$certificate_store, $subject_common_name, $subject_organization, $server} by {certificate_serial_number,certificate_store,server,subject_cn,subject_o}"
                                        }
                                    ],
                                    "response_format": "scalar",
                                    "sort": {
                                        "count": 10,
                                        "order_by": [
                                            {
                                                "index": 0,
                                                "order": "desc",
                                                "type": "formula"
                                            }
                                        ]
                                    },
                                    "text_formats": []
                                }
                            ],
                            "time": {},
